<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:expandableTextView="http://schemas.android.com/tools">
    <LinearLayout
        android:elevation="10dp"
        android:background="@color/colorAccent"
        android:id="@+id/fullBackground"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/sleepButton"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_search_black_24dp"
                    android:tint="@color/white"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:alpha="0.7"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <ImageButton
                    android:id="@+id/fullSpeed"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_search_black_24dp"
                    android:tint="@color/white"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:alpha="0.7"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <ImageButton
                    android:id="@+id/fullPlaylist"
                    android:padding="10dp"
                    android:src="@drawable/ic_search_black_24dp"
                    android:tint="@color/white"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:alpha="0.7"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
            </LinearLayout>
            <com.wslclds.castn.extensions.SquareRelativeLayout
                android:foregroundGravity="center"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.CardView
                    app:cardBackgroundColor="?attr/cardColor"
                    app:cardElevation="10dp"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/fullImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.v7.widget.CardView>
            </com.wslclds.castn.extensions.SquareRelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                app:cardElevation="0dp"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="@color/transparentDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="15dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/fullTitle"
                        android:text="title"
                        android:textColor="@color/white"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.bskim.maxheightscrollview.widgets.MaxHeightScrollView
                        app:maxHeight="300dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <at.blogc.android.views.ExpandableTextView
                            android:id="@+id/fullDescription"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:textColorLink="@color/white"
                            android:alpha="0.7"
                            android:maxLines="2"
                            android:ellipsize="end"
                            app:animation_duration="550"
                            android:text="description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </com.bskim.maxheightscrollview.widgets.MaxHeightScrollView>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:background="@color/transparentDark2"
                android:padding="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="00:00:00"
                    android:id="@+id/time1"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_weight="1"
                    android:progressTint="@color/whiteTransparent"
                    android:thumbTint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="00:00:00"
                    android:id="@+id/time2"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <android.support.v7.widget.CardView
                app:cardElevation="0dp"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="@color/transparentDark2"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <LinearLayout
                    android:layout_marginTop="-8dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/fullBackTime"
                        android:tint="@color/white"
                        android:layout_marginEnd="30dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:alpha="0.7"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />
                    <ImageButton
                        android:id="@+id/fullPlayPause"
                        android:tint="@color/white"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:alpha="0.7"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                    <ImageButton
                        android:id="@+id/fullSkipTime"
                        android:tint="@color/white"
                        android:layout_marginStart="30dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:alpha="0.7"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
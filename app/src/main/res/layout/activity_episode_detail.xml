<?xml version="1.0" encoding="utf-8"?>
<com.liuguangqiang.swipeback.SwipeBackLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeBackLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    tools:context="com.wslclds.castn.activities.EpisodeDetailActivity">
    <LinearLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="200dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@color/transparentDark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <android.support.v7.widget.CardView
                    android:id="@+id/mainCard"
                    app:cardBackgroundColor="?attr/cardColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="20dp"
                    android:clipToPadding="false"
                    android:clipChildren="false">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <android.support.v7.widget.CardView
                                android:id="@+id/episodeCard"
                                android:layout_margin="10dp"
                                app:cardElevation="5dp"
                                app:cardCornerRadius="10dp"
                                app:cardBackgroundColor="@color/colorAccent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <android.support.v7.widget.CardView
                                        app:cardBackgroundColor="?attr/cardColor"
                                        android:layout_margin="10dp"
                                        app:cardElevation="0dp"
                                        app:cardCornerRadius="10dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                        <ImageView
                                            android:id="@+id/image"
                                            android:src="#000"
                                            android:layout_width="70dp"
                                            android:layout_height="70dp" />
                                    </android.support.v7.widget.CardView>
                                    <LinearLayout
                                        android:layout_weight="1"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:orientation="vertical"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content">
                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:gravity="center|left"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <android.support.v7.widget.CardView
                                                app:cardBackgroundColor="?attr/cardColor"
                                                app:cardCornerRadius="5dp"
                                                app:cardElevation="0dp"
                                                android:layout_marginRight="10dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content">
                                                <TextView
                                                    android:id="@+id/status"
                                                    android:text="STREAM"
                                                    android:textSize="11sp"
                                                    android:layout_margin="3dp"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" />
                                            </android.support.v7.widget.CardView>
                                            <TextView
                                                tools:text="title"
                                                android:textColor="@color/white"
                                                android:id="@+id/title"
                                                android:singleLine="true"
                                                android:ellipsize="marquee"
                                                android:textSize="16sp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content" />
                                        </LinearLayout>
                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:gravity="center|left"
                                            android:layout_marginTop="5dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <TextView
                                                android:text="Duration: "
                                                android:textColor="@color/white"
                                                android:singleLine="true"
                                                android:textSize="10sp"
                                                android:alpha="0.7"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content" />
                                            <TextView
                                                tools:text="00:00:00"
                                                android:textColor="@color/white"
                                                android:id="@+id/duration"
                                                android:singleLine="true"
                                                android:textSize="10sp"
                                                android:alpha="1"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content" />
                                            <TextView
                                                android:text="Played: "
                                                android:layout_marginLeft="10dp"
                                                android:textColor="@color/white"
                                                android:singleLine="true"
                                                android:textSize="10sp"
                                                android:alpha="0.7"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content" />
                                            <TextView
                                                tools:text="00:00:00"
                                                android:textColor="@color/white"
                                                android:id="@+id/ellapsed"
                                                android:singleLine="true"
                                                android:textSize="10sp"
                                                android:alpha="1"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content" />
                                        </LinearLayout>
                                        <TextView
                                            android:visibility="gone"
                                            android:textColor="@color/white"
                                            android:id="@+id/date"
                                            android:singleLine="true"
                                            android:textStyle="italic"
                                            android:maxLines="3"
                                            android:textSize="10sp"
                                            android:alpha="0.7"
                                            android:layout_marginTop="3dp"
                                            android:ellipsize="end"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />
                                    </LinearLayout>
                                    <ImageButton
                                        android:id="@+id/play"
                                        android:tint="@color/white"
                                        android:src="@drawable/ic_play_arrow"
                                        android:background="?attr/selectableItemBackgroundBorderless"
                                        android:layout_marginRight="10dp"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp" />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <Button
                                android:id="@+id/addToPlaylist"
                                android:text="add to playlist"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <Button
                                android:text="download"
                                android:id="@+id/download"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <Button
                                android:text="share"
                                android:visibility="gone"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:padding="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                tools:text="description"
                                android:id="@+id/fullTitle"
                                android:textSize="18sp"
                                android:layout_marginBottom="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                tools:text="loading"
                                android:id="@+id/fullDescription"
                                android:textSize="14sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <android.support.v7.widget.CardView
                                app:cardBackgroundColor="?attr/cardColor"
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <com.wslclds.castn.extensions.SquareImageView
                                    android:id="@+id/fullImage"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</com.liuguangqiang.swipeback.SwipeBackLayout>